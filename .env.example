# ===========================================
# EUROBOT HUB - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ------------------------------------------
# STRAPI CMS (Backend)
# ------------------------------------------
# Your Strapi admin API token (create in Strapi Admin > Settings > API Tokens)
# Type: Full Access
# Duration: Unlimited
STRAPI_API_TOKEN=your_strapi_admin_api_token_here
STRAPI_URL=http://localhost:1337

# ------------------------------------------
# SUPABASE (Database)
# ------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for server-side operations)
# WARNING: Keep this secret! Never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ------------------------------------------
# EMAIL SERVICE (Resend)
# ------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email addresses for notifications
ADMIN_EMAIL=admin@eurobothub.com
REPORT_EMAIL=raporty@eurobothub.com

# PDF Report Path (must exist for email attachments)
# Location: public/pdf/Robot_Security_Report_2026_PL.pdf
# Status: âœ… ADDED (1.5 MB)

# ------------------------------------------
# STRIPE (Payments)
# ------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (from: https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ------------------------------------------
# DISCORD (Community Notifications)
# ------------------------------------------
# Discord Webhook URL for Premium Club notifications
# Create in: Discord Server > Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# ------------------------------------------
# NEXT.JS CONFIGURATION
# ------------------------------------------
# App URL (production)
NEXT_PUBLIC_APP_URL=https://eurobothub.com

# Supported locales (do not change unless adding new languages)
NEXT_PUBLIC_LOCALES=pl,en,de
NEXT_PUBLIC_DEFAULT_LOCALE=pl

# ------------------------------------------
# OPTIONAL: ANALYTICS & MONITORING
# ------------------------------------------
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Hotjar (for user behavior analytics)
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_HOTJAR_SNIPPET_VERSION=6

# ------------------------------------------
# DEVELOPMENT MODE FLAGS
# ------------------------------------------
# Set to 'true' to enable mock services (no API calls)
USE_MOCK_STRAPI=false
USE_MOCK_SUPABASE=false
USE_MOCK_EMAIL=false
USE_MOCK_STRIPE=false

# ------------------------------------------
# SEEDING CONFIGURATION
# ------------------------------------------
# Default locale for seeding (base language)
SEED_BASE_LOCALE=en

# Enable/disable automatic localization creation
SEED_CREATE_LOCALIZATIONS=true

# Image upload strategy: 'local' or 'cloudinary'
SEED_IMAGE_STRATEGY=local
