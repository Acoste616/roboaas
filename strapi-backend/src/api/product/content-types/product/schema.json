{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Humanoid robot products"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description_short": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description_full": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "price_eur": {
      "type": "integer",
      "required": true
    },
    "brand": {
      "type": "string",
      "required": true
    },
    "affiliate_link": {
      "type": "string"
    },
    "robot_height_cm": {
      "type": "integer",
      "required": true
    },
    "image": {
      "type": "string"
    },
    "gallery": {
      "type": "json",
      "default": []
    },
    "specs_table": {
      "type": "json",
      "default": {}
    },
    "smart_home_matrix": {
      "type": "json",
      "default": {}
    },
    "legal_compliance": {
      "type": "json",
      "default": {}
    }
  }
}
